@go.Package { name = "github.com/tikhonp/alcs/internal/config" }
module config

import "package://pkg.pkl-lang.org/pkl-go/pkl.golang@0.9.0#/go.pkl"

class Server {

    /// The hostname of this application.
    host: String

    /// The port to listen on.
    port: UInt16

    /// Sets server to debug mode.
    debug: Boolean

    /// Secret string for cryptography
    secret: String

}

/// Postgres database configuration.
class Database {
    user: String
    password: String
    dbname: String
    host: String
}

// OAuth credentials secrets
class GoogleAuth {
    googleKey: String
    googleSecret: String
}

// OAuth credentials secrets for telegram
class TelegramAuth {
    botToken: String
    telegramWebhookUrl: String
}

class Auth {
    google: GoogleAuth
    telegram: TelegramAuth
}

server: Server
db: Database
auth: Auth

/// Text file must contain release version or commit hash.
releaseFilePath: String

/// Base host like http://example.com
baseHost: String
